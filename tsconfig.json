{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDirs": [
      "src",
      "test"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "test"
  ]
}